{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/utility/**/*", "src/Public/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@preload/types": ["src/preload/types"],
      "@utility/*": ["src/utility/*"],
      "@shared/*": ["src/Public/ShareTypes/*"],
      "@prompt/*": ["src/Public/Prompt/*"]
    }
  }
}
