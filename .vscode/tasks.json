{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "开发模式 (dev)",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/KnowledgeDatabase-src"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "(VITE|ready|Local:|Network:|electron-vite)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true,
        "showReuseMessage": true,
        "echo": true
      },
      "isBackground": true
    },
    {
      "label": "开发模式 (dev:trace)",
      "type": "shell",
      "command": "npm run dev:trace",
      "options": {
        "cwd": "${workspaceFolder}/KnowledgeDatabase-src"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "(VITE|ready|Local:|Network:|electron-vite)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true,
        "showReuseMessage": true,
        "echo": true
      },
      "isBackground": true
    },
    {
      "label": "构建 Windows (build:win)",
      "type": "shell",
      "command": "npm run build:win",
      "options": {
        "cwd": "${workspaceFolder}/KnowledgeDatabase-src"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true,
        "showReuseMessage": true,
        "echo": true
      }
    }
  ]
}
